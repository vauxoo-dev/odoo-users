<?xml version="1.0"?>
<openerp>
    <data noupdate="1">
        <!-- Set enable the login with google -->
        <record id="auth_oauth.provider_google" model="auth.oauth.provider">
            <field name="enabled" eval="True"/>
            <field name="client_id">923513523547.apps.googleusercontent.com</field>
        </record>
        <!-- Changing the configuration to set available the login with oauth -->
        <record id="oauth_general_settings" model="base.config.settings">
            <field name="auth_signup_uninvited" eval="True"/>
            <field name="auth_signup_template_user_id" ref="auth_signup.default_template_user"/>
        </record>

        <function model="base.config.settings" name="execute" eval="[[ref('oauth_general_settings')]]"/>
    </data>
    <data>
       <template id="login_layout" name="Login Layout" inherit_id="web.login_layout">
            <xpath expr="//script[last()]" position="after">
                <t t-call-assets="web.assets_common" t-js='false'/>
                <t t-call-assets="web.assets_common" t-css='false'/>
                <t t-call="web.bootstrap"/>
                <script type="text/javascript" src="/web/static/src/js/framework/session.js"></script>
                <script type="text/javascript" src="/web/static/src/js/framework/session_instance.js"></script>
            </xpath>
        </template>
    </data>
</openerp>
